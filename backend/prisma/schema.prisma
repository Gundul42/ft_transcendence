datasource db {
	provider = "postgresql"
	url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Session {
	id				String		@id
	user			AppUser?
	ip_address		String?
	created_on		DateTime	@default(now())
	state			String
}

model AppUser {
	id				Int			@id
	sessionid		String		@unique
	session			Session		@relation(fields: [sessionid], references: [id])
	email			String
	full_name		String
	access_token	String
	token_type		String
	expires_in		Int
	refresh_token	String
	scope			String
	created_at		Int
}